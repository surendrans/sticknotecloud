<%= include_stylesheets :note_cloud, :media => 'all' %>
<%= include_javascripts :note_cloud %>

<link  href="http://fonts.googleapis.com/css?family=Reenie+Beanie:regular" rel="stylesheet" type="text/css"> 
<table width="100%">
  <tr><td><h2>Note Cloud</h2></td>
    <td>
      <input autocomplete="off" name="desc" id="desc_search" class="search span6" class="textbox" placeholder="search by note" tabindex="1" type="text" style="font-size:20px;height:30px; ">
    </td>
    <td>
      <input autocomplete="off" name="tag" id="tag_search" class="search span6" class="textbox" placeholder="search by Tag" tabindex="1" type="text" maxlength="140" size="58" value="" style="font-size:20px;height:30px; ">
    </td>
    <td align="right">
<%#= link_to image_tag("new_note.png"), "#new", :id => "new_note", :title => "Add note" %>
      <a href='#new' class="btn primary large">Create New</a>
    </td></tr>
</table>
<ul id="note_cloud">
</ul>

<div class="hint pills"> 
  <p style="font-size: 45px;" class=" active"><a href="#" >1</a>Take Note
  <a href="#" >2</a>Tag it &nbsp;<a href="#" >3</a>Save it &nbsp;<a href="#" >4</a>Search and Find
  </p>
  
</div>


<div id="new-note" style="width:300px;padding-left:50px;-moz-border-radius:15px 0px 0px 15px;border-radius: 15px 0px 0px 15px; background: none repeat scroll 0 0 rgba(0, 0, 0, 0.5);position:fixed;right:0px;top:100px ;border-color: white;">
</div>
